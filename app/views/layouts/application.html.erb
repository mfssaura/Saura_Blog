  <body>

    <%= render "layouts/navigation" %>

    <div class="main-body-left" id="main-div-body">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>

    <div

    <div class="footer">
      <div class="links">
        <div class="header"></div>
        <ul>
          <li>About</li>
          <li>Contact Me</li>
        </ul>
      </div>
      <div class="others">
        <div class="header"></div>
        <ul>
          <li>Privacy Policy</li>
          <li>FAQ</li>
          <li>Support</li>
        </ul>
      </div>
      <div class="catch-on-social">
        <div class="header"></div>
        <ul>
          <li>Facebook</li>
          <li>Twitter</li>
          <li>Google+</li>
        </ul>
      </div>
      </div>
    </div>
  </body>
</html>
